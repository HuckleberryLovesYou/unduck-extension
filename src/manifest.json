{
  "manifest_version": 3,
  "name": "Unduck Helper",
  "version": "0.1.0",
  "description": "Helper extension for Unduck to autofill searches on sites which don't support it natively.",
  "homepage_url": "https://github.com/HuckleberryLovesYou/unduck-extension",
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "*://gemini.google.com/app*",
    "*://docs.timmatheis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Unduck Helper Settings"
  },
  "content_scripts": [
    {
      "matches": ["*://gemini.google.com/app*", "*://docs.timmatheis.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
